<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <data>
        <variable
            name="position"
            type="Integer" />

        <variable
            name="itemData"
            type="com.app.dailyjounral.model.getWorkoutDataResponse.SetSelectedWorkoutData" />

        <variable
            name="holder"
            type="com.app.dailyjounral.adapter.WorkoutDetectorItemViewHolder" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8ssp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_Mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_15ssp"
                android:visibility="gone"
                android:background="@drawable/tip_of_the_day_gradient">

                <ImageView
                    android:id="@+id/iv_Mood"
                    android:layout_width="@dimen/_30ssp"
                    android:layout_height="@dimen/_30ssp"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    android:src="@drawable/icon_number_one">
                </ImageView>
            </LinearLayout>
            <com.app.dailyjounral.widget.HeaderText
                android:id="@+id/txtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_5ssp"
                android:textColor="#160042">

            </com.app.dailyjounral.widget.HeaderText>
            <ImageView
                android:id="@+id/iv_Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                android:src="@drawable/icon_number_one">

            </ImageView>

            <RadioButton
                android:id="@+id/rbSelection"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_gravity="center"
                android:gravity="center"
                >

            </RadioButton>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
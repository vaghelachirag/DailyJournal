<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="@dimen/_10ssp"
        android:padding="@dimen/_12ssp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <com.app.dailyjounral.uttils.CircularImageView
                android:id="@+id/navHeaderLogo"
                android:layout_width="@dimen/_60ssp"
                android:layout_height="@dimen/_60ssp"
                android:scaleType="fitXY"
                android:src="@drawable/logo"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="30dp" />

            <com.app.dailyjounral.widget.InterFontText
                android:id="@+id/txt_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp"
                android:textSize="@dimen/_12ssp"
                android:text="Robert Downey"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/navHeaderLogo"
                tools:ignore="MissingConstraints">

            </com.app.dailyjounral.widget.InterFontText>
        </LinearLayout>

        <com.app.dailyjounral.uttils.CircularImageView
            android:id="@+id/navHeaderAppLogo"
            android:layout_width="@dimen/_60ssp"
            android:layout_height="@dimen/_60ssp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_placeholder"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="30dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_15ssp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/txt_UserName"
            android:background="@color/gray_616161"
            tools:ignore="MissingConstraints" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
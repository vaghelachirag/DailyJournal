<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="@dimen/_10ssp"
        android:padding="@dimen/_12ssp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navHeaderLogo"
            android:layout_width="@dimen/_60ssp"
            android:layout_height="@dimen/_60ssp"
            android:src="@drawable/logo"
            android:scaleType="fitXY"
            tools:ignore="MissingConstraints" />


        <com.app.dailyjounral.widget.InterFontText
            android:id="@+id/txt_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:textSize="@dimen/_12ssp"
            android:text="User Name"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/navHeaderLogo"
            tools:ignore="MissingConstraints">

        </com.app.dailyjounral.widget.InterFontText>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_15ssp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/txt_UserName"
            android:background="@color/gray_616161"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
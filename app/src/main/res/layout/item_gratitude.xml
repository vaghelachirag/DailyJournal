<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <data>
        <variable
            name="position"
            type="Integer" />

        <variable
            name="itemData"
            type="com.app.dailyjounral.model.getGratitudeResponse.GetGratitudeListData" />

        <variable
            name="holder"
            type="com.app.dailyjounral.adapter.GratitudeAnswerItemViewHolder" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingTop="@dimen/_10ssp"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/edt_GratitudeAns"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_ans"
                android:textSize="@dimen/_10ssp"
                android:layout_gravity="top"
                android:gravity="top"
                android:padding="@dimen/_10ssp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@color/daily_general_ans_bg"
                android:layout_weight="0.9"
                tools:ignore="RtlSymmetry">

            </EditText>

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:gravity="end"
                android:src="@drawable/icon_gratitude_menu">

            </ImageView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
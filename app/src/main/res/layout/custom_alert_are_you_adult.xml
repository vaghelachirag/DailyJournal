<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_10ssp"
            android:background="@drawable/round_shape_edittext">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/iv_Close"
                    android:layout_width="@dimen/_24ssp"
                    android:layout_height="@dimen/_24ssp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_close"
                    app:tint="@color/main_logo_txt_bg" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp">

            </LinearLayout>
            <com.app.dailyjounral.widget.PoppinsBoldText
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Are you adult?"
                android:textSize="@dimen/_18ssp"
                tools:ignore="SpUsage" />


            <com.app.dailyjounral.widget.PoppinsBoldText
                android:id="@+id/tvValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_10ssp"
                tools:ignore="SpUsage" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10ssp"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOk"
                    android:layout_weight="1"
                    style="@style/CustomDialougButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16ssp"
                    app:backgroundTint="@null"
                    android:text="Yes"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12ssp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_weight="1"
                    style="@style/CustomDialougButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16ssp"
                    android:text="No"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</layout>
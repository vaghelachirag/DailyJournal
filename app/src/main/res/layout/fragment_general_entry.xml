<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.app.dailyjounral.viewmodel.analystic.GeneralEntryViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_15ssp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_MainTotalVerification"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                tools:ignore="MissingConstraints">

                   <com.app.dailyjounral.widget.SmallText
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:text="Date: "
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints,RtlSymmetry">

                </com.app.dailyjounral.widget.SmallText>

                <com.app.dailyjounral.widget.SmallText
                    android:id="@+id/txtCurrentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="50dp"
                    app:layout_constraintStart_toEndOf="@+id/dateLabel"
                    android:text="@string/dashboard"
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints,RtlSymmetry">

                </com.app.dailyjounral.widget.SmallText>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@+id/ll_MainTotalVerification">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_Main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingConstraints"
                            android:padding="20sp">

                            <LinearLayout
                                android:id="@+id/ll_GoalAnswer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:orientation="vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="ExtraText">

                                <com.app.dailyjounral.widget.HeaderText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:gravity="center_vertical"
                                    android:visibility="visible"
                                    android:textColor="@color/black"
                                    android:drawablePadding="3sp"
                                    android:textSize="14sp"
                                    android:drawableLeft="@drawable/icon_menu_goal_unselected"
                                    android:text="Goal Answer"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.HeaderText>
                                <com.app.dailyjounral.widget.RobotoRegularText
                                    android:id="@+id/txtGoalAnswer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:visibility="visible"
                                    android:layout_gravity="start"
                                    android:layout_weight="1.6"
                                    android:textColor="@color/gray_616161"
                                    android:drawablePadding="3sp"
                                    android:layout_marginTop="@dimen/_5ssp"
                                    android:textSize="12sp"
                                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electroni"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.RobotoRegularText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_SleepHours"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ll_GoalAnswer"
                                android:layout_marginTop="@dimen/_10ssp"
                                tools:ignore="ExtraText">

                                <com.app.dailyjounral.widget.HeaderText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:gravity="center_vertical"
                                    android:visibility="visible"
                                    android:textColor="@color/black"
                                    android:drawablePadding="3sp"
                                    android:textSize="14sp"
                                    android:drawableLeft="@drawable/icon_menu_sleep_unselected"
                                    android:drawableTint="@color/gray_616161"
                                    android:text="Sleep Hours : "
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.HeaderText>
                                <com.app.dailyjounral.widget.RobotoRegularText
                                    android:id="@+id/txtSleepHours"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:visibility="visible"
                                    android:layout_gravity="end"
                                    android:layout_weight="1.5"
                                    android:textColor="@color/gray_616161"
                                    android:drawablePadding="3sp"
                                    android:layout_marginTop="@dimen/_5ssp"
                                    android:textSize="12sp"
                                    android:text="8 Hr"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.RobotoRegularText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_Mood"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ll_SleepHours"
                                android:layout_marginTop="@dimen/_10ssp"
                                tools:ignore="ExtraText">

                                <com.app.dailyjounral.widget.HeaderText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:gravity="center_vertical"
                                    android:visibility="visible"
                                    android:textColor="@color/black"
                                    android:drawablePadding="3sp"
                                    android:textSize="14sp"
                                    android:text="Mood : "
                                    android:drawableLeft="@drawable/icon_menu_mood_unselected"
                                    android:drawableTint="@color/gray_616161"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.HeaderText>
                                <com.app.dailyjounral.widget.RobotoRegularText
                                    android:id="@+id/txtMood"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:visibility="visible"
                                    android:layout_gravity="end"
                                    android:layout_weight="1.5"
                                    android:textColor="@color/gray_616161"
                                    android:drawablePadding="3sp"
                                    android:layout_marginTop="@dimen/_5ssp"
                                    android:textSize="12sp"
                                    android:text="Angry"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.RobotoRegularText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_Workout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ll_Mood"
                                android:layout_marginTop="@dimen/_10ssp"
                                tools:ignore="ExtraText">

                                <com.app.dailyjounral.widget.HeaderText
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:gravity="center_vertical"
                                    android:visibility="visible"
                                    android:textColor="@color/black"
                                    android:drawablePadding="3sp"
                                    android:textSize="14sp"
                                    android:drawableLeft="@drawable/icon_menu_workout_unselected"
                                    android:drawableTint="@color/gray_616161"
                                    android:text="Workout : "
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.HeaderText>
                                <com.app.dailyjounral.widget.RobotoRegularText
                                    android:id="@+id/txtWorkout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:visibility="visible"
                                    android:layout_gravity="end"
                                    android:layout_weight="1.5"
                                    android:textColor="@color/gray_616161"
                                    android:drawablePadding="3sp"
                                    android:layout_marginTop="@dimen/_5ssp"
                                    android:textSize="12sp"
                                    android:text="Cardio"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.RobotoRegularText>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <com.app.dailyjounral.widget.HeaderText
                        android:id="@+id/txtGratitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:visibility="visible"
                        android:textColor="@color/black"
                        android:drawablePadding="3sp"
                        android:textSize="14sp"
                        android:paddingLeft="20sp"
                        android:drawableLeft="@drawable/icon_menu_gradituty_unselected"
                        android:text="Gratitude"
                        tools:ignore="MissingConstraints">
                    </com.app.dailyjounral.widget.HeaderText>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvGratitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:fadeScrollbars="false"
                        android:paddingTop="6dp"
                        android:layout_marginStart="@dimen/_15ssp"
                        android:visibility="visible"
                        android:paddingBottom="6dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/layoutMenu"
                        tools:listitem="@layout/item_general_entry" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>

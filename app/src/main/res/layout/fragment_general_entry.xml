<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.app.dailyjounral.viewmodel.analystic.GeneralEntryViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_15ssp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_MainTotalVerification"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="10sp"
                tools:ignore="MissingConstraints">

                   <com.app.dailyjounral.widget.SmallText
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/_20ssp"
                    android:text="Date: "
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints,RtlSymmetry">

                </com.app.dailyjounral.widget.SmallText>

                <com.app.dailyjounral.widget.TypefaceEditText
                    style="@style/TextInputExposedDropdownMenu"
                    android:id="@+id/edtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select date here"
                    android:textColorHint="@color/gray_616161"
                    android:textSize="@dimen/_12ssp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawableTint="@color/top_header_color"
                    android:background="@drawable/round_shape_edittext"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/icon_date"
                    android:padding="@dimen/_8ssp"
                    android:drawablePadding="@dimen/_5ssp"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="@dimen/_5ssp"
                    android:layout_marginStart="@dimen/_5ssp"
                    app:layout_constraintTop_toBottomOf="@+id/dateLabel"
                    tools:ignore="RtlSymmetry">

                </com.app.dailyjounral.widget.TypefaceEditText>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputExposedDropdownMenu"
                    android:id="@+id/inspnDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/black"
                    android:textColorHint="@color/black"
                    android:paddingStart="20dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/dateLabel"
                    android:hint="Select Date Here"
                    tools:ignore="RtlSymmetry">

                    <com.app.dailyjounral.widget.InstantAutoComplete
                        android:id="@+id/spnDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_size"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_616161"
                        android:textSize="@dimen/_12ssp"
                        app:custom_font="@string/app_font_regular" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.app.dailyjounral.widget.SmallText
                    android:id="@+id/txtCurrentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="50dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/dateLabel"
                    android:text="@string/dashboard"
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints,RtlSymmetry">

                </com.app.dailyjounral.widget.SmallText>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@+id/ll_MainTotalVerification">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_Main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ll_Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingConstraints"
                            android:padding="20sp">

                            <com.app.dailyjounral.widget.HeaderText
                                android:id="@+id/txtGratitude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:gravity="center_vertical"
                                android:visibility="visible"
                                android:textColor="@color/black"
                                android:drawablePadding="3sp"
                                android:textSize="@dimen/_14ssp"
                                android:drawableLeft="@drawable/icon_menu_gradituty_unselected"
                                android:text="Gratitude"
                                tools:ignore="MissingConstraints">
                            </com.app.dailyjounral.widget.HeaderText>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvGratitude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:fadeScrollbars="false"
                                android:paddingTop="6dp"
                                android:layout_marginStart="@dimen/_15ssp"
                                android:visibility="visible"
                                android:paddingBottom="6dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintTop_toBottomOf="@+id/txtGratitude"
                                tools:listitem="@layout/item_general_entry" />

                            <LinearLayout
                                android:id="@+id/ll_GoalAnswer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                app:layout_constraintTop_toBottomOf="@+id/rvGratitude"
                                android:orientation="vertical"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="ExtraText">

                                <com.app.dailyjounral.widget.HeaderText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:gravity="center_vertical"
                                    android:visibility="visible"
                                    android:textColor="@color/black"
                                    android:drawablePadding="3sp"
                                    android:textSize="@dimen/_14ssp"
                                    android:drawableLeft="@drawable/icon_menu_goal_unselected"
                                    android:text="Goal Answer"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.HeaderText>
                                <com.app.dailyjounral.widget.RobotoRegularText
                                    android:id="@+id/txtGoalAnswer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:visibility="visible"
                                    android:layout_gravity="start"
                                    android:layout_weight="1.6"
                                    android:textColor="@color/gray_616161"
                                    android:drawablePadding="3sp"
                                    android:layout_marginTop="@dimen/_5ssp"
                                    android:textSize="@dimen/_14ssp"
                                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electroni"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.RobotoRegularText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_SleepHours"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ll_GoalAnswer"
                                android:layout_marginTop="@dimen/_10ssp"
                                tools:ignore="ExtraText">

                                <com.app.dailyjounral.widget.HeaderText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:visibility="visible"
                                    android:textColor="@color/black"
                                    android:drawablePadding="3sp"
                                    android:textSize="@dimen/_14ssp"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/icon_menu_sleep_unselected"
                                    android:drawableTint="@color/gray_616161"
                                    android:text="Sleep Hours : "
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.HeaderText>
                                <com.app.dailyjounral.widget.RobotoRegularText
                                    android:id="@+id/txtSleepHours"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:visibility="visible"
                                    android:layout_gravity="center"
                                    android:textColor="@color/gray_616161"
                                    android:drawablePadding="3sp"
                                    android:layout_marginLeft="@dimen/_5ssp"
                                    android:text="8 Hr"
                                    android:textSize="@dimen/_14ssp"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.RobotoRegularText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_Mood"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ll_SleepHours"
                                android:layout_marginTop="@dimen/_10ssp"
                                tools:ignore="ExtraText">

                                <com.app.dailyjounral.widget.HeaderText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:visibility="visible"
                                    android:textColor="@color/black"
                                    android:drawablePadding="3sp"
                                    android:text="Mood : "
                                    android:textSize="@dimen/_14ssp"
                                    android:drawableLeft="@drawable/icon_menu_mood_unselected"
                                    android:drawableTint="@color/gray_616161"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.HeaderText>
                                <com.app.dailyjounral.widget.RobotoRegularText
                                    android:id="@+id/txtMood"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:visibility="visible"
                                    android:layout_gravity="center"
                                    android:textColor="@color/gray_616161"
                                    android:textSize="@dimen/_14ssp"
                                    android:text="Angry"
                                    android:layout_marginLeft="@dimen/_5ssp"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.RobotoRegularText>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_Workout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ll_Mood"
                                android:layout_marginTop="@dimen/_10ssp"
                                tools:ignore="ExtraText">

                                <com.app.dailyjounral.widget.HeaderText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:visibility="visible"
                                    android:textColor="@color/black"
                                    android:drawablePadding="3sp"
                                    android:textSize="@dimen/_14ssp"
                                    android:drawableLeft="@drawable/icon_menu_workout_unselected"
                                    android:drawableTint="@color/gray_616161"
                                    android:text="Workout : "
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.HeaderText>
                                <com.app.dailyjounral.widget.RobotoRegularText
                                    android:id="@+id/txtWorkout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:visibility="visible"
                                    android:layout_marginLeft="@dimen/_5ssp"
                                    android:textColor="@color/gray_616161"
                                    android:drawablePadding="3sp"
                                    android:textSize="@dimen/_14ssp"
                                    android:text="Cardio"
                                    tools:ignore="MissingConstraints">
                                </com.app.dailyjounral.widget.RobotoRegularText>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <data>
        <variable
            name="position"
            type="Integer" />

        <variable
            name="itemData"
            type="com.app.dailyjounral.model.MoodDataModel" />

        <variable
            name="holder"
            type="com.app.dailyjounral.adapter.MoodItemViewHolder" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8ssp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="@dimen/_30ssp"
        android:layout_marginStart="@dimen/_30ssp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_marginLeft="@dimen/_10ssp"
        app:cardBackgroundColor="@color/white"
        card_view:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="10sp">
       <LinearLayout
           android:layout_width="@dimen/_50ssp"
           android:layout_height="@dimen/_50ssp"
           android:layout_gravity="center"
           android:gravity="center"
           android:background="@drawable/circular_background">

           <ImageView
               android:id="@+id/iv_Mood"
               android:layout_width="@dimen/_30ssp"
               android:layout_height="@dimen/_30ssp"
               android:layout_gravity="center"
               android:src="@drawable/sleep_icon">

           </ImageView>
       </LinearLayout>

       <com.app.dailyjounral.widget.LogoText
           android:id="@+id/txt_Header"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="10sp"
           android:textSize="15sp"
           android:textColor="@color/top_header_color"
           android:text="Sleep">

       </com.app.dailyjounral.widget.LogoText>

   </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/top_header_color">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/round_shape_edittext"
                android:padding="@dimen/_16ssp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_close" />

                <com.app.dailyjounral.widget.PoppinsBoldText
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="something_went_wrong"
                    android:textSize="@dimen/_18ssp"
                    tools:ignore="SpUsage" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10ssp"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOk"
                        android:layout_weight="1"
                        style="@style/CustomDialougButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16ssp"
                        app:backgroundTint="@null"
                        android:text="Yes"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12ssp"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        android:layout_weight="1"
                        style="@style/CustomDialougButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16ssp"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        app:backgroundTint="@null"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>
    </FrameLayout>
</layout>